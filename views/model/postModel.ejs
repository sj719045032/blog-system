<div class="modal fade" id="postModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    发表
                </h4>
            </div>
            <form action="/post" class="post_form" role="form" method="post" style="display: inline">
                <div class="modal-body clearfix">
                    <div class="form-group">
                        <div class="input-group "><span class="input-group-addon">标题</span><input class=" form-control"
                                                                                                  id="post_title"
                                                                                                  type="text"
                                                                                                  name="title"
                                    placeholder="请输入标题…" maxlength="15">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group "><span class="input-group-addon">内容</span><textarea
                                    class="form-control"
                                    id="post_content"
                                    type="text" name="content"  placeholder="请输入内容…" maxlength="130"></textarea>
                        </div>
                    </div>
                    <div class="imguploadcontainer" ><div class="img_btn pull-left"><span class="glyphicon glyphicon-picture"></span> 图片</div>
                        <% include imgupload.ejs%>
                    </div>

                    <div class="btn-group pull-right post_btn">

                       <button type="button" class="btn btn-primary btn-sm post_btn">发表</button>
                    </div>
                    <div class="input_number pull-right">还能输入130个字</div>
                </div>
            </form>
        </div>
    </div>
</div>