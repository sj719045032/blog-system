<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div id="main">
    <% include top %>
    <div id="content">
        <% if (success) { %>
        <div><%= success %></div>
        <% } %>
        <% if (error) { %>
        <div><%= error %> </div>
        <% } %>
        <% posts.forEach(function (post, index) { %>
        <div style="border: 1px solid black;margin-bottom: 10px">

        <h2><a href="/users/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
        <p class="info">
            作者：<a href="/users/<%= post.name %>"><%= post.name %></a> |
            日期：<%= post.time.minute %>


        <p><%- post.post %></p>
        </div>
        <% }) %>
    </div>
  <% include pageing%>
    <% include bottom %>
</div>
</body>
</html>



