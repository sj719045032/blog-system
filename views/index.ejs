<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/stylesheets/lightbox.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/js/bootstrap3/css/bootstrap.min.css"/>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap3/js/bootstrap.min.js"></script>
    <script src="/js/dropzone.js"></script>
</head>
<body style="background: #73CFF1 url('/images/index_bg.jpg' ) center top no-repeat; ">
<% include top %>

<div class="container">
    <% include prompt.ejs %>
    <div class="row">
        <% if(posts) %>
        <% posts.forEach(function (post, index) { %>
        <div class="panel  panel-default col-md-12 col-sm-12 table-bordered"
             style="padding:10px 0px 0px 0px;margin-bottom: 30px;max-height: 200px;overflow: hidden">

            <div class="panel-heading"><a class="h3 panel-title " href="/users/p/<%= post._id %>"><%= post.title %></a>

                <div class="label label-info">作者：<a href="/users/<%= post.name %>"><%= post.name %></a> |
                    日期：<%= post.time.minute %> |
                    点击量：<%= post.pv ? post.pv : "0" %> | 转载：
                    <% if (post.reprint_info.reprint_to) { %>
                    <%= post.reprint_info.reprint_to.length %>
                    <% } else { %>
                    <%= 0 %>
                    <% } %>
                </div>
            </div>
            <div class="panel-body"><%- post.post %></div>
            <div class="panel-footer clearfix">
                <% if(post.img) { %>
                <% post.img.forEach(function (img) { %>
                <a target="_blank" data-lightbox="roadtrip<%= post._id %>" href=<%= img.sourceImg %>><img
                            style="width: 50px;height: 50px" src=<%= img.thumbnailImg %>></a>
                <% }) %>
                <% } %>
            </div>
        </div>
        <% }) %>
    </div>
    <% include pageing %>
    <% include bottom %>
</div>
<script src="/js/lightbox.min.js"></script>
<script>
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true
    })
</script>
</body>
</html>



