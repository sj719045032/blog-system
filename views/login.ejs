<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>登录</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/js/bootstrap3/css/bootstrap.min.css"/>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap3/js/bootstrap.min.js"></script>
</head>
<body>

<% include top %>

<div class="container">
    <form style="width: 500px;margin-top: 100px;padding: 50px 50px"
          class="login_form form-horizontal  table-bordered center-block" role="form" method="post">
        <div class="form-group"><label style="font-size: 15px" for="username"
                                       class="col-lg-3 control-label">用户名：</label>

            <div class="col-lg-9"><input class="form-control" id="username" type="text" name="username"></div>
        </div>
        <div class="form-group"><label for="password" style="font-size:15px" class="col-lg-3 control-label">密码：</label>

            <div class="col-lg-9"><input class="form-control" type="password" id="password" name="password"></div>
        </div>

        <div style="width: 200px;height: 40px" class="center-block ">

            <button class="btn btn-primary pull-left" type="submit">登录</button>
            <button class="btn btn-primary pull-right" type="reset">重置</button>

        </div>
        <% if (success) { %>
        <div><%= success %></div>
        <% } %>
        <% if (error) { %>
        <div><%= error %> </div>
        <% } %>
    </form>

</div>
<% include bottom %>

</body>
</html>
