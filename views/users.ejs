<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%=title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div id="main">
<%- include top %>
<% posts.forEach(function (post, index) { %>
    <div style="border: 1px solid black;margin-bottom: 10px">
        <p>

        <h2><a href="/users/p/<%= post._id %>"><%= post.title %></a></h2></p>
<p class="info">
    作者：<a href="/users/<%= post.name %>"><%= post.name %></a> |
    日期：<%= post.time.minute %>|
    点击量：<%= post.pv?post.pv:"0" %>
</p>
<p><%- post.post %></p>
        </div>
<% }) %>
    <% include pageing.ejs%>
<%- include bottom %>
    </div>
</body>
</html>
