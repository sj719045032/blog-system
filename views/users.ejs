<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/stylesheets/lightbox.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/js/bootstrap3/css/bootstrap.min.css"/>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap3/js/bootstrap.min.js"></script>
    <script src="/js/dropzone.js"></script>
</head>
<body style="background: #73CFF1 url('/images/index_bg.jpg' ) center top no-repeat; ">
<% include top.ejs %>
<div class="container">

    <% include prompt.ejs %>
    <div class="row">
        <div id="user_left" class="col-md-8 col-sm-8">
            <% if(posts) %>
            <% posts.forEach(function (post) { %>
            <div class="panel  panel-default col-md-12 col-sm-12 table-bordered user_left_content">

                <div class="panel-heading clearfix"><a class="h3 panel-title pull-left "
                                                       href="/users/p/<%= post._id %>"><%= post.title %></a>

                    <div class="pull-left" style="margin-left: 20px">作者：<a
                                href="/users/<%= post.name %>"><%= post.name %></a> |
                        日期：<%= post.time.minute %> |
                        点击量：<%= post.pv ? post.pv : "0" %> | 转载：
                        <% if (post.reprint_info.reprint_to) { %>
                        <%= post.reprint_info.reprint_to.length %>
                        <% } else { %>
                        <%= 0 %>
                        <% } %>
                    </div>
                </div>
                <div class="panel-body"><%- post.post %></div>
                <div class="panel-footer clearfix">
                    <% if(post.img) { %>
                    <% post.img.forEach(function (img) { %>
                    <a target="_blank" data-lightbox="roadtrip<%= post._id %>" href="<%= img.sourceImg %>"><img
                                style="width: 80px;height: 120px" src="<%= img.thumbnailImg %>"></a>
                    <% }) %>
                    <% } %>
                    <form action="/remove" target="_blank" method="post" style="display: inline">
                        <div class="btn-group pull-right ">
                            <% if (user && (user.name == post.name)) { %>
                            <a class="edit btn btn-primary btn-sm" href="/edit/<%= post._id %>">编辑</a>
                            <input type="hidden" name="id" value="<%= post._id %>">
                            <input class=" btn btn-primary btn-sm" name="" type="submit" value="删除" onClick="delcfm()">

                            <% } %>
                            <% var flag = 1 %>
                            <% if (user && (user.name != post.name)) { %>
                            <% if ((post.reprint_info.reprint_from != undefined) && (user.name == post.reprint_info.reprint_from.name)) { %>
                            <% flag = 0 %>
                            <% } %>
                            <% if ((post.reprint_info.reprint_to != undefined)) { %>
                            <% post.reprint_info.reprint_to.forEach(function (reprint_to, index) { %>
                            <% if (user.name == reprint_to.name) { %>
                            <% flag = 0 %>
                            <% } %>
                            <% }) %>
                            <% } %>
                            <% } else { %>
                            <% flag = 0 %>
                            <% } %>
                            <% if (flag) { %>
                            <a class="edit btn btn-primary btn-sm" href="/reprint/<%= post._id %>">转载</a>
                            <% } %>
                        </div>
                    </form>


                </div>
            </div>
            <% }) %>
            <% include pageing %>
        </div>
        <div id="user_right" class="col-md-4 col-sm-4 clearfix">
            <div id="user_info">
                <div class="user_head">
                    <div class="user_head_portrait "><img src="/images/head_portrait_default.png"><span
                                class="head_name"><%= other_user.name %>
                            <% if(user.name != other_user.name && !isAttention) { %>
                            <a class="attention" href="/users/attention/<%= other_user.name %>">关注</a>
                            <% }else if(isAttention){ %>
                            <a class="remove_attention" href="/users/remove_attention/<%= other_user.name %>">取消关注</a>
                            <% } %>
                        </span>
                    </div>
                    <div class="user_message">
                        <ul>
                            <li>
                                <a><span>广播</span><span><%= other_user.article_number ? other_user.article_number : 0 %></span></a>
                            </li>
                            <li>
                                <a><span>关注</span><span><%= other_user.attention ? other_user.attention.length : 0 %></span></a>
                            </li>
                            <li>
                                <a><span>被关注</span><span><%= other_user.by_attention ? other_user.by_attention.length : 0 %></span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<% include bottom %>

<script src="/js/lightbox.min.js"></script>
<script>
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true
    })
</script>
</body>
</html>



