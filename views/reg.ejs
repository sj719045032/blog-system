<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>注册</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div id="main">
    <% include top %>
    <div id="content">
        <form class="reg_form" method="post">
            <div>用户名：<input id="username" type="text" name="username"></div>
            <div>密码：<input type="password" id="password" name="password"></div>
            <div>重复密码：<input type="password" id="rpassword" name="rpassword"></div>
            <div>
                <button type="submit">提交</button>
                <button type="reset">重置</button>
            </div>
            <% if (success) { %>
            <div><%= success %></div>
            <% } %>
            <% if (error) { %>
            <div><%= error %> </div>
            <% } %>
        </form>
    </div>
    <% include bottom %>
</div>
</body>
</html>
