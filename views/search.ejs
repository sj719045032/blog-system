<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%=title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/js/bootstrap3/css/bootstrap.min.css"/>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap3/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <% include top %>
    <div id="content">
        <ul class="archive">
            <% var lastYear = 0 %>
            <% posts.forEach(function (post, index) { %>
            <% if(lastYear != post.time.year) { %>
            <li><h3><%= post.time.year %></h3></li>
            <% lastYear = post.time.year } %>
            <li><time><%= post.time.day %></time></li>
            <li><a href="/users/p/<%= post._id %>"><%= post.title %></a></li>
            <% }) %>
        </ul>
    </div>
    <% include bottom %>
</div>
</body>
</html>
